{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "AuthAPI": "https://mangoauthapi.azurewebsites.net",
    "ProductAPI": "https://mangoapigateway.azurewebsites.net",
    "CouponAPI": "https://mangoapigateway.azurewebsites.net",
    "ShoppingCartAPI": "https://mangoapigateway.azurewebsites.net",
    "OrderAPI": "https://mangoapigateway.azurewebsites.net"
  },
  "ApplicationInsights": {
    "ConnectionString": "InstrumentationKey=***REMOVED***;IngestionEndpoint=https://eastus-8.in.applicationinsights.azure.com/;LiveEndpoint=https://eastus.livediagnostics.monitor.azure.com/;ApplicationId=42725056-fc58-4ba4-9f2f-076fd07ffefb"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/applog-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "flushToDiskInterval": "00:00:03"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
