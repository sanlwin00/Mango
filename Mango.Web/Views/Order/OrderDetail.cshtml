@using Mango.Web.Models.Dto
@model OrderHeaderDto
<form method="post">
    <br />
    <div class="container">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <div class="container row">
                <div class="col-6 mt-1">
                    <h3 class="text-white"><i class="bi bi-list-ul"></i> &nbsp; Order Detail</h3>
                    <input type="hidden" asp-for="OrderHeaderId"/>
                </div>
                <div class="col-6 text-end">
                    <a asp-action="OrderIndex" asp-controller="Order" class="btn btn-secondary mt-2 btn-sm">Back to Orders</a>
                </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row my-1">
                                <div class="col-3">Name</div>
                                <div class="col-9">
                                    <input value="@Model.FirstName @Model.LastName" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Phone</div>
                                <div class="col-9">
                                    <input asp-for="Phone" readonly class="form-control" />
                                </div>
                            </div>

                            <div class="row my-1">
                                <div class="col-3">Email</div>
                                <div class="col-9">
                                    <input asp-for="Email" readonly class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">Order Date</div>
                                <div class="col-9">
                                    <input value="@Model.OrderDate.ToShortDateString()" readonly class="form-control" />
                                </div>
                            </div>
                            @if (User.IsInRole(StaticData.Roles.ADMIN.ToString()))
                            {
                                <div class="row my-1">
                                    <div class="col-3">Stripe Session ID</div>
                                    <div class="col-9">
                                        <input asp-for="StripeSessionId" readonly class="form-control" />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">Payment Intent ID</div>
                                    <div class="col-9">
                                        <input asp-for="PaymentIntentId" readonly class="form-control" />
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span>Order Summary</span>
                            </h4>
                            <label class="bg-light text-dark text-center form-control my-2">Order Status - <span class="fw-bold text-primary">@Model.Status</span></label>
                            <div class="card-body">
                                <div class=" d-none d-lg-block">
                                    <div class="row fw-bold">
                                        <div class="col-6">
                                            Product Details
                                        </div>
                                        <div class="col-2 text-center">
                                            Count
                                        </div>
                                        <div class="col-2 text-end">
                                            Price
                                        </div>
                                        <div class="col-2 text-end">
                                            Amt
                                        </div>
                                    </div>
                                </div>
                                <hr />

                                @foreach (var item in Model.OrderDetails)
                                {
                                    <div class="row h-100">
                                        <div class="col-6">
                                            <span>@item.ProductName</span>
                                        </div>
                                        <div class="col-2 text-center">
                                            <span>@item.Qty</span>
                                        </div>
                                        <div class="col-2 text-end">
                                            <span>@item.Price</span>
                                        </div>
                                        <div class="col-2 text-end">
                                            <span>@((item.Price * item.Qty).ToString("C"))</span>
                                        </div>
                                    </div>
                                }
                                <hr />

                                <div class="row">
                                    <div class="col-12 pr-4 text-end">
                                        @if (Model.Discount > 0)
                                        {
                                            var totalBeforeDiscount = Model.OrderTotal + Model.Discount;

                                            <span class="text-muted">
                                                Total:
                                                <del>@totalBeforeDiscount.ToString("C")</del><br />
                                            </span>
                                            <span class="text-success">
                                                (@Model.CouponCode.ToUpper()) Order Discount: @Model.Discount.ToString("C")<br />
                                            </span>
                                        }
                                        <span class="text-danger h5">  Order Total : @Model.OrderTotal.ToString("C") </span>
                                    </div>
                                </div>

                            </div>
                            @if (User.IsInRole(StaticData.Roles.ADMIN.ToString()))
                            {
                                if(Model.Status == StaticData.OrderStatus.Approved.ToString())
                                {
                                    <button asp-action="OrderReady" asp-route-orderId="@Model.OrderHeaderId" class="btn btn-info form-control my-1">Ready for Pickup</button>
                                }
                                if (Model.Status == StaticData.OrderStatus.ReadyForPickup.ToString())
                                {
                                    <button asp-action="OrderComplete" asp-route-orderId="@Model.OrderHeaderId" class="btn btn-success form-control my-1">Order Complete</button>
                                }
                                if (Model.Status != StaticData.OrderStatus.Completed.ToString() && Model.Status != StaticData.OrderStatus.Cancelled.ToString())
                                {
                                    <button asp-action="OrderCancel" asp-route-orderId="@Model.OrderHeaderId" class="btn btn-danger form-control my-1">Cancel Order</button>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


