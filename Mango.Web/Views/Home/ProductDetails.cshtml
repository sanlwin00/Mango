@model ProductDto

<form method="post" asp-action="AddToCart">
    <div class=" pt-4">
        <div class="card container" style="border:1px solid #808080;">
            <div class="card-header row text-primary" style="border-radius: 0px;">
                <div class="col-12 col-md-6">
                    <h3>@Model.Name</h3><input type="hidden" asp-for="ProductId"/>
                </div>
                <div class="col-12 col-md-6 text-end">
                    <h3 class="text-danger">@Model.Price.ToString("$0.00")</h3>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-4 p-1 text-center">
                            <img src="@Model.ImageUrl" style="border-radius:35px;" width="100%" class="rounded" />
                        </div>
                        <div class="col-12 col-lg-8">
                            <div class="row pl-3">

                                <div class="col-12">
                                    <span class="badge bg-warning border">@Model.CategoryName</span>
                                    <p class="text-secondary pt-3">@Model.Description</p>
                                </div>
                            </div>
                            <div class="row mx-0">
                                <div class="col-1">Qty</div>
                                <div class="col-2"><input asp-for="Qty" class="form-control" /></div>
                                <div class="col-9"><span asp-validation-for="Qty" class="text-danger" /></div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-12 col-md-6 pb-1 ">
                    <a asp-action="Index" class="btn btn-secondary btn-square form-control">Back to List</a>
                </div>
                <div class="col-12 col-md-6 ">
                    <button type="submit" class="btn btn-primary form-control">Add to Cart</button>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}