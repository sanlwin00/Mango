@using Mango.Web.Models.Dto
@model CartDto

<form method="post">
    <div class="container">
        <div class="card border mt-4 container">
            <div class="card-header bg-primary text-white ml-0 row ">
                <div class="col-6">
                    <h3 class="text-white"><i class="bi bi-cart"></i> &nbsp; Shopping Cart</h3>
                </div>
                <div class="col-6 text-end">
                    <a class="btn btn-secondary mt-2 btn-sm">Continue Shopping</a>
                </div>
            </div>
            <div class="card-body">
                <div class=" d-none d-lg-block">
                    <div class="row text-info">
                        <div class="col-lg-2">
                        </div>
                        <div class="col-lg-5">
                            Product Details
                        </div>
                        <div class="col-lg-2">
                            Price
                        </div>
                        <div class="col-lg-2">
                            Count
                        </div>
                        <div class="col-lg-1">
                        </div>
                    </div>
                </div>
                <hr />
                @foreach(var item in Model.CartDetails)
                {
                    <div class="row h-100">
                        <div class="col-4 col-md-2 text-center py-2">
                            <img src="@item.Product.ImageUrl" class="rounded" width="100%" />
                        </div>
                        <div class="col-8 col-md-5">
                            <h5>Name</h5>
                            <div style="font-size:11px;">@item.Product.Name</div>
                        </div>
                        <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                            <span style="font-size:17px;">@item.Product.Price </span>
                        </div>
                        <div class="col-3 col-md-2 pt-md-4" style="font-size:11px;">
                            <span style="font-size:17px;">@item.Qty</span>
                        </div>
                        <div class="col-2 col-lg-1 p-0 pt-lg-4 text-center">
                            <a class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i>
                            </a>
                        </div>
                    </div>
                }
                <hr />
                <div class="row">
                    <div class="col-6">
                        <span>Coupon:</span>
                        <input asp-for="CartHeader.CouponCode" />
                        <button type="submit" class="btn btn-sm btn-success"> Apply </button>
                    </div>
                    <div class="col-6 text-end">
                        <span class="text-danger" style="font-size:21px;">  Order Total : @Model.CartHeader.CartTotal.ToString("$0.00") <br /></span>
                        <span class="text-success"> Order Discount :  @Model.CartHeader.Discount.ToString("$0.00")</span>
                    </div>
                </div>
            </div>
            <div class="card-footer row">
                <div class="col-6 col-md-3 ">
                    <button type="submit" class="btn btn-outline-danger form-control">Email Cart</button>
                </div>
                <div class="col-6 col-md-3 offset-md-6">
                    <button disabled class="btn btn-success form-control " value="Checkout (Comming Soon!)" />
                </div>
            </div>
        </div>
    </div>
</form>