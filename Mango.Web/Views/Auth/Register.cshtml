@using Mango.Web.Models.Dto
@model RegistrationDto

<form asp-action="Register">
    <div class="card shadow border-0 mt-4 col-12 col-md-6 offset-md-3 pb-2">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h1 class="text-white">Registration</h1>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div asp-validation-summary="All" class="text-danger" />
            </div>
            <div class="row">                
                <div class="col-12 col-md-8 offset-md-2 pb-2">
                    <input asp-for="Email" class="form-control" placeholder="Email..." />
                </div>
                <div class="col-12 col-md-8 offset-md-2 pb-2">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password..." />
                </div>
                <div class="col-12 col-md-8 offset-md-2 pb-2">
                    <input asp-for="Name" class="form-control" placeholder="Name..." />
                </div>
                <div class="col-12 col-md-8 offset-md-2 pb-2">
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number..." />
                </div>
                <div class="col-12 col-md-8 offset-md-2 pb-2">
                    <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                        <option disabled selected>- Select Role -</option>
                    </select>
                </div>
                <div class="col-12 col-md-8 offset-md-2 pb-2">
                    <input type="submit" value="Register" class="btn btn-primary form-control" />
                </div>
            </div>

        </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}