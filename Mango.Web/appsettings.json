{
  "AllowedHosts": "*",
  "ServiceUrls": {
    "AuthAPI": "https://localhost:7002",
    "ProductAPI": "https://localhost:7000",
    "CouponAPI": "https://localhost:7001",
    "ShoppingCartAPI": "https://localhost:7003",
    "OrderAPI": "https://localhost:7004"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Seq" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/applog-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "flushToDiskInterval": "00:00:03"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:7080" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
